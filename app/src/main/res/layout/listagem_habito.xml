<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC74E"
        android:padding="8dp">

        <TextView
            android:id="@+id/nomeHabito"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/kdam_thmor_pro"
            android:text="Habit Name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/barra"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="278dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:animateLayoutChanges="true"
            android:progress="50"
            android:progressDrawable="@drawable/progress_custom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nomeHabito" />

        <ImageButton
            android:id="@+id/btnReiniciar"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/barra"
            app:layout_constraintStart_toEndOf="@+id/nomeHabito"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/restart" />

        <TextView
            android:id="@+id/text_progresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:text="120/30"
            app:layout_constraintBottom_toBottomOf="@+id/barra"
            app:layout_constraintEnd_toEndOf="@+id/barra"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/barra"
            app:layout_constraintTop_toTopOf="@+id/barra" />

        <ImageView
            android:id="@+id/gifView"
            android:layout_width="89dp"
            android:layout_height="93dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnReiniciar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notgodzillastage1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
